extends layout

block content
    form(method='POST' action='')
        label(for='name') Name:
        input(type='select' placeholder='Name' name='name' required='true' value=(category && category.name))
        label(for='description') Description:
        input(type='select' placeholder='Description' name='description' required='true' value=(category && category.description))
        button(type='submit') Submit
    if errors
       ul
         for error in errors
             li!= error.msg
