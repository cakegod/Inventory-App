extends layout

block content
    form(method='POST')
        label(for='name') Name:
        input(type='select' placeholder='Name' name='name' required='true' value=(product && product.name))
        label(for='description') Description:
        input(type='select' placeholder='Description' name='description' required='true' value=(product && product.description))
        label(for='category') Category:
        select(type='select' placeholder='Select a category' name='category' required='true')
          for category in categories
              option(value=category._id, selected=(category === category._id.toString() ? 'selected' : false) ) #{category.name}
        label(for='price') Price:
        input(type='number' placeholder='Price' name='price' required='true' value=(product && product.price))
        label(for='numberInStock') Number in Stock:
        input(type='number' placeholder='Number in Stock' name='numberInStock' required='true' value=(product && product.numberInStock))
        button(type='submit') Submit
    if errors
           ul
             for error in errors
                 li!= error.msg